<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:Inventory_system"
        x:Class="Inventory_system.MainWindow"
        x:DataType="vm:MainViewModel"
        Title="Inventory App"
        Width="650" Height="750"
        Background="Black">

    <StackPanel Margin="20" Spacing="10">
        
        <TextBlock Text="Inventory System"
                   FontWeight="Bold"
                   FontSize="28"
                   Foreground="White"/>

        <Button Content="Process Next Order"
                Command="{Binding ProcessNextOrderCommand}"
                Width="200" Height="40"/>

        <TextBlock Text="{Binding TotalRevenue, StringFormat='Total revenue: {0:N2} kr.'}"
                   FontWeight="Bold"
                   FontSize="18"
                   Foreground="White"
                   Margin="0,10,0,5"/>

        <TextBlock Text="Queued Orders:"
                   FontWeight="Bold"
                   FontSize="16"
                   Foreground="White"/>

        <Border BorderBrush="Gray" BorderThickness="1" Padding="5">
            <ScrollViewer Height="120">
                <ItemsControl ItemsSource="{Binding QueuedOrders}" Foreground="White"/>
            </ScrollViewer>
        </Border>

        <TextBlock Text="Processed Orders:"
                   FontWeight="Bold"
                   FontSize="16"
                   Foreground="White"/>

        <Border BorderBrush="Gray" BorderThickness="1" Padding="5">
            <ScrollViewer Height="120">
                <ItemsControl ItemsSource="{Binding ProcessedOrders}" Foreground="White"/>
            </ScrollViewer>
        </Border>

        <TextBlock Text="Status Messages:"
                   FontWeight="Bold"
                   FontSize="16"
                   Foreground="White"
                   Margin="0,5,0,5"/>

        <Border BorderBrush="Gray" BorderThickness="1" Padding="5">
            <ScrollViewer Height="180">
                <ItemsControl ItemsSource="{Binding StatusMessages}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding}" Foreground="LightGray"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Border>

    </StackPanel>
</Window>
